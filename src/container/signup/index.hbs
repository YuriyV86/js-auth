<div class="page page--background">
    <header>
        {{> back-button}}
    </header>

    <form class="page__section">
        <h1 class="page__title">Реєстрація</h1>

        <div class="form">
            <div class="form__item">
                {{> field action='signupForm.change' name='email' label='Ел. адреса' type='text' placeholder='Ваш
                e-mail'}}
                <span name="email" class="form__error">Помилка</span>
            </div>

            <div class="form__item">
                {{> field-password name='password' label='Пароль' type='text'
                placeholder='Введіть пароль'}}
                <span name="password" class="form__error">Помилка</span>
            </div>

            <div class="form__item">
                {{> field-select action='signupForm.change' label='Роль' name='role' type='text' placeholder='Оберіть
                роль' list=data.role}}
                <span name="role" class="form__error">Помилка</span>
            </div>

            <div class="form__item">
                {{> field-checkbox action='signupForm.change' name='isConfirm' label='Ви погоджуєтеся з правилами
                сервіса'}}
                <span name="isConfirm" class="form__error">Помилка</span>
            </div>

        </div>

        <button onclick="signupForm.submit();" class="button" type="button">Зареєструватися</button>

        <span class="alert alert--error">Увага, помилка!</span>
    </form>
</div>